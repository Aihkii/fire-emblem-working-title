{
  "name": "fire-emblem-heroes-calculator",
  "version": "0.6.5",
  "description": "Calculate the result of combat between one hero and another",
  "main": "dist/index.js",
  "author": "Andrew Hyndman <ajhyndman@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run compile && npm run copy-types",
    "build:watch": "chokidar \"src/**/*.js\" --initial true --debounce 2000 --command \"npm run build\"",
    "compile": "babel src --out-dir dist",
    "copy-types": "cp src/index.js dist/index.js.flow && jscodeshift dist/index.js.flow --transform build/transform-import-path.js",
    "lint": "eslint src/**/*.js pages/**/*.js && flow check",
    "tape": "tape -r babel-register tests/**/*.js",
    "test": "npm run lint && npm run tape"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.17.1",
    "eslint-config-ajhyndman": "git+https://github.com/ajhyndman/eslint-config-ajhyndman#1.1.0",
    "eslint-plugin-no-null": "^1.0.2",
    "flow-bin": "^0.42.0",
    "jscodeshift": "^0.3.30",
    "tape": "^4.6.3"
  },
  "dependencies": {
    "fire-emblem-heroes-stats": "^0.6.4",
    "ramda": "^0.23.0"
  }
}
